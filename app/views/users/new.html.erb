<h2> Sign up for Friends </h2>

<%if @user.errors.any? %>
  <% @user.errors.full_messages.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_for(@user) do |f| %>
<%= f.text_field :username %>
<%= f.label :username %>
<br>
<%= f.password_field :password %>
<%=f.label :password, "Enter password" %>
<br>
<%= f.password_field :password_confirm %>
<%=f.label :password_confirm, "Confirm password"%>
<br>
<%=f.submit "SUBMIT TO ME!"%>
<% end %>

<%= link_to "Already belong?", new_session_url %>